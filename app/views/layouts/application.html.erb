<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html>
<head>
	<meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
	<title>CleanTogether: <%= controller.action_name %></title>
	<%= stylesheet_link_tag "default" %>
	<%= javascript_include_tag :defaults %>
	<%= calendar_date_select_includes "red" %>
	<!--[if lt IE 7.]>
		<script defer type="text/javascript" src="/javascripts/pngfix.js"></script>
	<![endif]-->
	
</head>
<body>		
	<div id="container">
		<div id="header">
			<div class="headerText"><img src="/images/new/logo.png"/></div>		
				<div class="menu">
					<table>
						<tr>
							<td>
								<div class="menuItem">
									<%= link_to 'Home', :controller => "home", :action => :index  %> 
								</div>
							</td>
							<td>
								<div class="menuItem">							      
									<%= link_to 'Post Your Story', events_path  %>
								</div>
							</td>
							<td>
								<div class="menuItem">
									<%= link_to 'Profile', profile_path %>
								</div>
							</td>
							<td>
								<div class="menuItem">			
									<a href="http://cleantogether.googlecode.com/">For Developers</a>				
								</div>
							</td>
						</tr>					
					</table>
				</div>
				<div id="logout">
					<%if session[:user_id]%>					
							<%= link_to 'logout', :controller => 'users', :action => 'logout' %>&nbsp;<%=session[:user_login]%>					
					<%end%>
				</div>
			</div>
		</div>
		<div id="content">
			<p style="color: green"><%= flash[:notice] %></p>
			<%= yield :layout %>
		</div>
		<div id="footer">
			<div>&nbsp;</div>
			<div>&nbsp;</div>
			<div>
				Â© 2007
			</div>
			<div>
				Website Uptime Monitoring By <a href="http://pingability.com">http://pingability.com</a>
			</div>
			<div>
				Report problems or Abuse to <b>webmaster <i>at</i> custommode.com</b>
			</div>
		</div>
	</div>

	<%#do not remove lines below, used by google analytics%>
	<script src="http://www.google-analytics.com/urchin.js" type="text/javascript">
	</script>
	<script type="text/javascript">
	_uacct = "UA-3129031-1";
	urchinTracker();
	</script>
</body>
</html>
