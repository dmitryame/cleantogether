<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html>
<head>
	<meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
	<title>CleanTogether: <%= controller.action_name %></title>
	<%= stylesheet_link_tag "default" %>
	<%= javascript_include_tag :defaults %>
	<%= calendar_date_select_includes "red" %>
	<!--[if lt IE 7.]>
		<script defer type="text/javascript" src="/javascripts/pngfix.js"></script>
	<![endif]-->
	
</head>
<body>		
	<div id="container">
		<div id="header">
			<div class="headerText"><img src="/images/new/logo.png"/></div>		
				<div class="menu">
					<table>
						<tr>
							<td>
								<div class="menuItem">
									<%= link_to 'Home', home_path  %> 
								</div>
							</td>
							<td>
								<div class="menuItem">							      
									<%= link_to 'My Stories', logged_in? ? user_stories_path(current_user) : user_stories_path(0)%>
								</div>
							</td>
							<td>
								<div class="menuItem">
									<%= link_to 'My Profile', logged_in? ? user_path(current_user) : user_path(0) %>
								</div>
							</td>
							<td>
								<div class="menuItem">			
									<a href="http://cleantogether.googlecode.com/">For Developers</a>				
								</div>
							</td>
						</tr>					
					</table>
				</div>
				<div id="logout" class="description">
					<%if logged_in?%>					
							<%= link_to "logout", logout_path %>&nbsp;<%=current_user.login%>					
					<%end%>
				</div>
			</div>
		</div>
		<div id="content">
			<p style="color: green"><%= flash[:notice] %></p>
			<% if flash[:error] %>
				<div class="error_box"><%= flash[:error]%></div>
			<% end %>
			<%= yield :layout %>
		</div>
		<div id="footer">
			<div>&nbsp;</div>
			<div>&nbsp;</div>
			<div>
				Â© 2007
			</div>
			<div>
				Website Uptime Monitoring By <a href="http://pingability.com">http://pingability.com</a>
			</div>
			<div>
				Report problems or Abuse to <b>webmaster <i>at</i> custommode.com</b>
			</div>
			<div>
				<%=link_to "terms", :controller => :home, :action => :terms %>
			</div>
		</div>
	</div>

	<%#do not remove lines below, used by google analytics%>
	<script src="http://www.google-analytics.com/urchin.js" type="text/javascript">
	</script>
	<script type="text/javascript">
	_uacct = "UA-3129031-1";
	urchinTracker();
	</script>
</body>
</html>
